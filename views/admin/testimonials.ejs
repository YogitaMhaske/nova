<%-include('nav.ejs')%>

<form action="/admin/save_testimonial" method="post" enctype="multipart/form-data" >
    <div class="container-fluid bg-white p-3 border"> 
       <h3 class="mb-3 text-info">ADD NEW TESTIMONIAL </h3>
         <div class="row">
           <div class="col-md-6 mb-4">
               Enter Name
                <input type="text" class="form-control"  name="test_name" >
           </div>  
           <div class="col-md-6 mb-4" >
           Select Rating
           <select class="form-control" name="test_rating">
              <option selected>5 </option>
              <option>4 </option>
              <option>3 </option>
              <option>2 </option>
              <option>1 </option>
           </select>
            </div> 
           <div class="col-md-6 mb-4">
            Select Image
             <input type="file" class="form-control"  name="test_image" accept="image/*" required>
           </div>
           <div class="col-md-6 mb-4">
            Enter Position
             <input type="text" class="form-control"  name="test_position" >
            </div> 
           <div class="col-md-12 mb-4">
            Enter Description
              <textarea type="text" class="form-control"  name="test_desc" ></textarea>
            </div>    
           <div class="col-12 mt-4">
            <button class="btn btn-primary float-right">SAVE TESTIMONIAL INFORMATION</button>
           </div>
       </div>
    </div>
</form>
<br><br>
<h3 class="text-center text-dark" >TESTIMONIAL LIST</h3><br>
<table class="table table-hover table-stripped table-bordered table-responsive">
  <tr>
     <th>Action</th>
     <th>SN</th>
     <th>Name</th>
     <th>Rating</th>
     <th>Image</th>
     <th>Position</th>
     <th>Description</th>
  </tr>
  <% for(i=0;i<test.length;i++) { %>
    <tr>
        <td>
            
                <a href="/admin/delete_testi?id=<%=test[i].testimonial_id%>" onclick="return confirm('Are you sure....? ')"><i class="fa fa-trash btn-sm btn btn-outline-danger"></i></a>
                <a href="/admin/edit_testi?id=<%=test[i].testimonial_id%>"><i class="fa fa-edit btn-sm btn btn-outline-primary"></i></a>
            
        </td>
        <td><%=i+1%></td>
        <td><%=test[i].test_name%></td>
        <td><%=test[i].test_rating%></td>
        <th><img src="/uploads/<%=test[i].test_image%>" height="100px" width="100px"></th>
        <td><%=test[i].test_position%></td>
        <td><%=test[i].test_desc%></td>
     </tr>
  <% } %>
</table>
<%-include('footer.ejs')%>
