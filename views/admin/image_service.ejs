<%-include('nav.ejs')%>
 <form action="/admin/save_image_service" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-3 border"> 
        <h3 class="mb-3 text-info"> Fill Image Services</h3>
          <div class="row">
            <div class="col-md-6 mb-4">
                Select Image
                <input  type="file" name="service_image" class="form-control" accept="image/*">
            </div>
            <div class="col-md-6 mb-4">
                 Enter Title
                 <input type="text" name="image_title" class="form-control" >
            </div>
            <div class="col-12 mb-4">
                Enter Description
                <input type="text" name="image_desc" class="form-control" >
           </div>
           <div class="col-12 mb-4 text-right">
            <button class="btn btn-primary">SAVE IMAGE SERVICE</button>
           </div>
          </div>
    </div>
</form>
<br><br>
<table class="table table-bordered table-hover bg-white table-responsive">
  <tr>
    <th>Action</th>
    <th>SN</th>
    <th>Image Title</th>
    <th>Service Image</th>
    <th>Service Description</th>
  </tr>
  <% for(i=0;i<imgservice.length;i++) {%>
    <tr>
        <td>
            <a href="/admin/delete_serviceimg?id=<%=imgservice[i].service_image_id%>"><i class="fa fa-trash btn btn-sm btn-outline-danger" onclick="return confirm('Are You Sure.....?')"></i></a>
            <a href="/admin/edit_serviceimg?id=<%=imgservice[i].service_image_id%>"><i class="fa fa-edit btn btn-sm btn-outline-primary"></i></a>
        </td>
        <td><%=i+1%></td>
        <td><%=imgservice[i].image_title%></td>
        <th><img src="/uploads/<%=imgservice[i].service_image%>" height="100px" width="100px"></th>
        <td><%=imgservice[i].image_desc%></td>
    </tr> 
  <% } %>
</table>

<%-include('footer.ejs')%>