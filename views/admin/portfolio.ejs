<%-include('nav.ejs')%>
 <form action="/admin/save_portfolio" method="post" enctype="multipart/form-data">
    <div class="container-fluid bg-white p-3 border"> 
        <h3 class="mb-3 text-info">ADD NEW PORTFOLIO</h3>
          <div class="row">          
                <div class="col-md-4 mb-4">
                    Select Portfolio Image
                    <input type="file" class="form-control"  name="portfolio_image" accept="image/*" multiple>
                </div>   
                <div class="col-md-8 mb-4">
                    Portfolio Title
                    <input type="text" class="form-control"  name="portfolio_title" >
                </div>  
                <div class="col-md-4 mb-4">
                    Portfolio Subtitle
                    <input type="text" class="form-control"  name="portfolio_subtitle" >
                </div>  
                <div class="col-md-4 mb-4">
                    Portfolio Category
                    <input type="text" class="form-control"  name="portfolio_category" >
                </div>  
                <div class="col-md-4 mb-4">
                    Client
                    <input type="text" class="form-control"  name="portfolio_client" >
                </div>  
                <div class="col-md-4 mb-4">
                    Portfolio Date
                <input type="date" class="form-control"  name="portfolio_date" >
                </div>  
                <div class="col-md-4 mb-4">
                    Portfolio URL
                <input type="text" class="form-control"  name="portfolio_url" >
                </div>  
                <div class="col-md-4 mb-4">
                    Portfolio Types
                    <select class="form-control" name="portfolio_type_id" required>
                        <option></option>
                    <% for(i=0;i<port_types.length;i++) {%>
                       <option value="<%=port_types[i].portfolio_type_id%>"><%=port_types[i].portfolio_type%></option>
                    <% } %>
                    </select>
                </div> 

                <div class="col-12 mb-4">
                    Portfolio Description
                <input type="text" class="form-control"  name="portfolio_desc" >
                </div>  
                <div class="col-12 mt-4">
                    <button class="btn btn-primary float-right">SAVE PORTFOLIO</button>
                </div>
         </div>
     </div>
</form>
    <br><br>
  <h3 class="text-center text-dark">PORTFOLIO LIST</h3><br>
    <table class="table table-hover table-stripped table-bordered bg-white table-responsive">
        <tr>
            <th>Action</th>
            <th>SN</th>
            <th>Portfolio Type</th>            
            <th>Portfolio Title</th>
            <th>Portfolio Category</th>
            <th>Portfolio Client</th>
            <th>Portfolio Date</th>
            <th>Portfolio URL</th>            
            <th>Portfolio Image</th>            
        </tr>
        <% for(i=0;i<port_list.length;i++) { %>
            <tr>
                <td>
                    <a href="/admin/delete_portfolio?id=<%=port_list[i].portfolio_id%>"><i class="fa fa-trash btn btn-sm btn-outline-danger" onclick="return confirm('Are You Sure ....?')"></i></a>
                    <a href="/admin/edit_portfolio?id=<%=port_list[i].portfolio_id%>"><i class="fa fa-edit btn btn-sm btn-outline-primary "></i></a>
                </td>
                <td><%=i+1%></td>
                <td><%=port_list[i].portfolio_type%></td>
                <td><%=port_list[i].portfolio_title%></td>
                <td><%=port_list[i].portfolio_category%></td>
                <td><%=port_list[i].portfolio_client%></td>
                <td><%=port_list[i].portfolio_date%></td>
                <td><%=port_list[i].portfolio_url%></td>    
                <th><img src='/uploads/<%=port_list[i].portfolio_image.split("||")[0]%>' 
                    width="100px" height="100px"></th>  
                        
            </tr>
         <% } %>
    </table>

    <%-include('footer.ejs')%>
